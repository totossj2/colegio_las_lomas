<section class="mt-16 px-4">
    <div class="text-center mb-8">
        <h2 class="text-4xl md:text-5xl font-light tracking-wide">
            <span class="text-[#B2CA4D]">SOBRE</span>
            <span class="text-[#B2CA4D] font-bold">NOSOTROS</span>
