<style>
  .button_card.active {
    background-color: #96ab41;
    border: 1px solid #b2ca4d;
  }
</style>

<script is:inline>
  // Intersection Observer setup
  const observerOptions = {
    root: null,
    rootMargin: '0px',
    threshold: 0.1,
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        entry.target.classList.remove('opacity-0', 'translate-y-16');
      }
    });
  }, observerOptions);

  // Observe all elements with animate-card class
  document.querySelectorAll('.animate-card').forEach((card) => {
    observer.observe(card);
  });

  function showCard(cardId) {
    const misionCard = document.getElementById('misionCard');
    const visionCard = document.getElementById('visionCard');
    const misionButton = document.getElementById('misionButton');
    const visionButton = document.getElementById('visionButton');

    misionCard.classList.remove('fade-in');
    visionCard.classList.remove('fade-in');

    if (cardId === 'mision') {
      misionCard.style.display = 'block';
      visionCard.style.display = 'none';
      misionButton.classList.add('active');
      visionButton.classList.remove('active');
      setTimeout(() => {
        misionCard.classList.add('fade-in');
      }, 10);
    } else if (cardId === 'vision') {
      misionCard.style.display = 'none';
      visionCard.style.display = 'block';
      misionButton.classList.remove('active');
      visionButton.classList.add('active');
      setTimeout(() => {
        visionCard.classList.add('fade-in');
      }, 10);
    }
  }

  // Initially show only the mision card on mobile
  if (window.innerWidth < 768) {
    showCard('mision');
  } else {
    document.getElementById('misionCard').style.display = 'block';
    document.getElementById('visionCard').style.display = 'block';
  }

  window.addEventListener(
    'resize',
    function (event) {
      if (window.innerWidth < 768) {
        if (
          document.getElementById('misionButton').classList.contains('active')
        ) {
          showCard('mision');
        } else {
          showCard('vision');
        }
      } else {
        document.getElementById('misionCard').style.display = 'block';
        document.getElementById('visionCard').style.display = 'block';
      }
    },
    true
  );
</script>
<style>
  .fade-in {
    animation: fadeIn 0.5s ease-in-out;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
</style>
