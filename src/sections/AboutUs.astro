<!-- Animated Cards Section -->
<div class="max-w-4xl mx-auto px-4 mt-16">
    <!-- Toggle Buttons (Mobile Only) -->
    <div class="md:hidden flex justify-center space-x-4 mb-8">
        <button
            id="misionButton"
            class="button_card bg-[#B2CA4D] text-black px-4 py-2 rounded-full font-bold focus:outline-none active"
            onclick="showCard('mision')"
        >
            Misión
        </button>
        <button
            id="visionButton"
            class="button_card bg-[#B2CA4D] text-black px-4 py-2 rounded-full font-bold focus:outline-none"
            onclick="showCard('vision')"
        >
            Visión
        </button>
    </div>

    <div class="grid md:grid-cols-2 gap-8">
        <!-- Card 1 -->
        <div
            id="misionCard"
            class="animate-card opacity-0 translate-y-16 bg-[#B2CA4D] rounded-lg shadow-xl hover:shadow-2xl overflow-hidden transition-all duration-700 ease-out border-l-8 border-[#96AB41]"
        >
            <div class="p-6">
                <h3 class="text-2xl font-[600] text-black mb-4">
                    Nuestra
                    <span class="font-bold"> Misión</span>
                </h3>
                <p class="text-black">
                    Promovemos un
                    <span class="font-bold"
                        >aprendizaje activo y experiencial</span
                    >. Formamos estudiantes
                    <span class="font-bold">críticos</span>, <span
                        class="font-bold">reflexivos</span
                    > y capaces de aplicar sus conocimientos en diversos contextos
                    para construir un <span class="font-bold"
                        >futuro consciente y comprometido</span
                    >.
                </p>
            </div>
        </div>

        <!-- Card 2 -->
        <div
            id="visionCard"
            class="animate-card opacity-0 translate-y-16 bg-[#B2CA4D] rounded-lg shadow-xl hover:shadow-2xl overflow-hidden transition-all duration-700 ease-out delay-300 border-l-8 border-[#96AB41]"
        >
            <div class="p-6">
                <h3 class="text-2xl font-bold text-black mb-4">
                    Nuestra Visión
                </h3>
                <p class="text-black">
                    Ser reconocidos como una <span class="font-bold"
                        >institución educativa líder</span
                    > en
                    <span class="font-bold">innovación</span> y <span
                        class="font-bold">excelencia académica</span
                    >, creando un <span class="font-bold">impacto positivo</span
                    > en la comunidad a través de nuestros egresados.
                </p>
            </div>
        </div>
    </div>
</div>

<style>
    .button_card.active {
        background-color: #96ab41;
        border: 1px solid #b2ca4d;
    }
</style>

<script is:inline>
    // Intersection Observer setup
    const observerOptions = {
        root: null,
        rootMargin: "0px",
        threshold: 0.1,
    };

    const observer = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
            if (entry.isIntersecting) {
                entry.target.classList.remove("opacity-0", "translate-y-16");
            }
        });
    }, observerOptions);

    // Observe all elements with animate-card class
    document.querySelectorAll(".animate-card").forEach((card) => {
        observer.observe(card);
    });

    function showCard(cardId) {
        const misionCard = document.getElementById("misionCard");
        const visionCard = document.getElementById("visionCard");
        const misionButton = document.getElementById("misionButton");
        const visionButton = document.getElementById("visionButton");

        misionCard.classList.remove("fade-in");
        visionCard.classList.remove("fade-in");

        if (cardId === "mision") {
            misionCard.style.display = "block";
            visionCard.style.display = "none";
            misionButton.classList.add("active");
            visionButton.classList.remove("active");
            setTimeout(() => {
                misionCard.classList.add("fade-in");
            }, 10);
        } else if (cardId === "vision") {
            misionCard.style.display = "none";
            visionCard.style.display = "block";
            misionButton.classList.remove("active");
            visionButton.classList.add("active");
            setTimeout(() => {
                visionCard.classList.add("fade-in");
            }, 10);
        }
    }

    // Initially show only the mision card on mobile
    if (window.innerWidth < 768) {
        showCard("mision");
    } else {
        document.getElementById("misionCard").style.display = "block";
        document.getElementById("visionCard").style.display = "block";
    }

    window.addEventListener(
        "resize",
        function (event) {
            if (window.innerWidth < 768) {
                if (
                    document
                        .getElementById("misionButton")
                        .classList.contains("active")
                ) {
                    showCard("mision");
                } else {
                    showCard("vision");
                }
            } else {
                document.getElementById("misionCard").style.display = "block";
                document.getElementById("visionCard").style.display = "block";
            }
        },
        true,
    );
</script>
<style>
    .fade-in {
        animation: fadeIn 0.5s ease-in-out;
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }
</style>
